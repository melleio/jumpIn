<?xml version='1.0' encoding='utf-8'?>
<widget id="io.melle.events.jumpin" version="0.0.9" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>JumpIn</name>
    <description>
        personal event manager
    </description>
    <author email="l@emelle.me" href="http://cordova.io">
        -melle.io-
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-calendar" />
    <plugin name="cordova-plugin-network-information" />
    <plugin name="cordova-plugin-inappbrowser" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-navigation href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="orientation" value="portrait" />
    <engine name="android" spec="~5.1.1" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- you can use any density that exists in the Android project -->

        <splash src="res/screens/android/screen-hdpi-portrait.png" density="port-hdpi"/>
        <splash src="res/screens/android/screen-ldpi-portrait.png" density="port-ldpi"/>
        <splash src="res/screens/android/screen-mdpi-portrait.png" density="port-mdpi"/>
        <splash src="res/screens/android/screen-xhdpi-portrait.png" density="port-xhdpi"/>

        <icon src="res/icons/android/icon-36-ldpi.png" density="ldpi" />
        <icon src="res/icons/android/icon-48-mdpi.png" density="mdpi" />
        <icon src="res/icons/android/icon-72-hdpi.png" density="hdpi" />
        <icon src="res/icons/android/icon-96-xhdpi.png" density="xhdpi" />
        <icon src="res/icons/android/icon-144-xxhdpi.png" density="xxhdpi" />
        <icon src="res/icons/android/icon-192-xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <!-- iPhone 6 / 6+ -->
        <icon src="res/icons/ios/icon-60@3x.png" platform="ios" width="180" height="180" />

        <!-- iPhone / iPod Touch  -->
        <icon src="res/icons/ios/icon-60.png" platform="ios" width="60" height="60" />
        <icon src="res/icons/ios/icon-60@2x.png" platform="ios" width="120" height="120" />

        <!-- iPad -->
        <icon src="res/icons/ios/icon-76.png" platform="ios" width="76" height="76" />
        <icon src="res/icons/ios/icon-76@2x.png" platform="ios" width="152" height="152" />

        <!-- Settings Icon -->
        <icon src="res/icons/ios/icon-small.png" platform="ios" width="29" height="29" />
        <icon src="res/icons/ios/icon-small@2x.png" platform="ios" width="58" height="58" />

        <!-- Spotlight Icon -->
        <icon src="res/icons/ios/icon-40.png" platform="ios" width="40" height="40" />
        <icon src="res/icons/ios/icon-40@2x.png" platform="ios" width="80" height="80" />

        <!-- iPhone / iPod Touch -->
        <icon src="res/icons/ios/icon.png" platform="ios" width="57" height="57" />
        <icon src="res/icons/ios/icon@2x.png" platform="ios" width="114" height="114" />

        <!-- iPad -->
        <icon src="res/icons/ios/icon-72.png" platform="ios" width="72" height="72" />
        <icon src="res/icons/ios/icon-72@2x.png" platform="ios" width="144" height="144" />

        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icons/ios/icon-small.png" platform="ios" width="29" height="29" />
        <icon src="res/icons/ios/icon-small@2x.png" platform="ios" width="58" height="58" />

        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/icons/ios/icon-50.png" platform="ios" width="50" height="50" />
        <icon src="res/icons/ios/icon-50@2x.png" platform="ios" width="100" height="100" />

        <splash src="res/screens/ios/screen-iphone-portrait.png" width="320" height="480"/>
        <splash src="res/screens/ios/screen-iphone-portrait-667h.png" width="640" height="960"/>
        <splash src="res/screens/ios/screen-iphone-portrait-736h.png" width="768" height="1024"/>
        <splash src="res/screens/ios/screen-iphone-portrait-2x.png" width="1536" height="2048"/>
        <splash src="res/screens/ios/screen-iphone-portrait-2x.png" width="640" height="1136"/>
        <splash src="res/screens/ios/screen-iphone-portrait-736h.png" width="750" height="1334"/>
        <splash src="res/screens/ios/screen-iphone-portrait-568h-2x.png" width="1242" height="2208"/>
        <splash src="res/screens/ios/screen-iphone-portrait-2x.png" width="2208" height="1242"/>
    </platform>
</widget>
